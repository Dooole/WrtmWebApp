@model IEnumerable<WrtmWebApp.Models.Device>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>OpenWRT manager</h1>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Mac)
    </td>
    @if (item.State == "OK")
    {
        <td style="font-weight: bold; color: green">
            @Html.DisplayFor(modelItem => item.State)
        </td>
    }
    else if (item.State == "CONFIGURING")
    {
        <td style="font-weight: bold; color: orange">
            @Html.DisplayFor(modelItem => item.State)
        </td>
    }
    else if (item.State == "OFFLINE")
    {
        <td style="font-weight: bold; color: red">
            @Html.DisplayFor(modelItem => item.State)
        </td>
    }
    else
    {
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
</tr>
    }

</table>